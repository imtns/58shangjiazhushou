      },
      choseStyle() {
          this.isShowDialogShare = false;
          wepy.navigateTo({
              url: 'choseImageStyle',
          });
      },
  };
  onLoad() {
      this.loadCard();
  }
  async loadCard() {
      // data是object，是
      const { data } = await post(CARD_HAS_DETAIL, {
          cardId: wepy.getStorageSync('cardId'),
      });
      this.cardDetai = data;
      this.$apply();
  }
}
