<script>
import wepy from 'wepy';
import Mixin from './mixin';
import { toast } from '../../utils';
import { globalData } from '../../utils/globalData';

const { get } = require('../../utils/ajax');

export default class goods extends wepy.page {
  config = {
      navigationBarTitleText: '商品管理',
      disableScroll: true,
  };
  mixins = [Mixin];
  data = {
      list: {},
      group: {},
      goodsGroupName: '',
      goodsGroupId: '',
      params: {
          goodsGroupId: '0',
          goodsPage: '1',
          goodsSize: '4',
          goodsIds: '0',
      },
  };
  methods = {
      addgoods() {
          wepy.navigateTo({
              url: `../goodsComponentAdd?id=${this.pageId}`,
          });
      },
      async radioBoxChange(e) {
          this.group.forEach(item => {
              item.checked = item.data.id === e.detail.value;
          });
          const { data } = await get('/goods/list', {
              mpId: wx.getStorageSync('current_mpid'),
              groupId: e.detail.value,
          });
          this.params.goodsGroupId = e.detail.value;
          console.log(data);
          this.list = data.data;
          this.pageData[0].props.data = [];
          this.list.forEach((item) => {
              item.pics = item.pics.substr(0, item.pics.indexOf('?'));
              this.pageData[0].props.data.push({
                  img: item.pics,
                  title: item.title,
                  price: item.price,
              });
          });
          this.$apply();
      },
      bindNameInput(e) {
          this.pageModule.cfg.title = e.detail.value;
      },
      save() {
          const selectgoods = this.group.filter(obj => obj.checked === true);
          if (selectgoods.length === 0) {
              toast('至少选择一个分组');
              return;
          }
          console.log(JSON.stringify(this.params));
          this.pageModule.params = this.params;
          globalData.pageData[this.pageIndex].props = this.pageData[0].props;
          globalData.modules[this.pageIndex] = this.pageModule;
          toast('已保存');
          setTimeout(() => {
              wx.navigateBack({
                  delta: 1,
              });
          }, 1000);
      },
  };
  async onLoad() {
      [this.pageModule] = this.tempModules.filter(obj => obj.id === this.pageId);
      this.pageModule.cfg.title = '';
      delete this.pageModule.data;
      console.log(this.pageModule);
      this.params.goodsGroupId = this.pageModule.params.goodsGroupId;
      await this.loadgoodsGroup();
      if (this.goodsGroupName) {
          this.loadgoodsList();
      }
  }
  async loadgoodsGroup() {
      const { data } = await get('/goods/groups/specail', {
          mpId: wx.getStorageSync('current_mpid'),
      });
      this.group = data;
      this.group.forEach(item => {
          Object.assign(item, {
              checked: false,
          });
          if (item.data.id === this.params.goodsGroupId) {
              item.checked = true;
          }
      });
      this.$apply();
  }
}
</script>
