<template>
    <scroll-view class="visitor-container" scroll-y bindscrolltolower="loadMore" style="height:100vh" >
        <image class="visitor-bg" src="https://static.58.com/lbg/shangjiaxcxht/zhushou/img/visitor-bg.png" mode="aspectFit"/>
        <view class="visitor-card">
                <view class="visitor-info">
                    <view class="avator" wx:if="{{visitInfo.portrait}}">
                        <image src="{{visitInfo.portrait}}?w=120&h=120&ss=1"/>
                    </view>
                    <view class="detail">
                        <view class="name">
                            {{visitInfo.nickName}}
                            <view wx:if="{{visitInfo.otherInfo.gender}}" class="{{visitInfo.otherInfo.gender === 1 ? 'male' : 'female'}}"></view>
                        </view>
                        <view class="address">{{visitInfo.otherInfo.city}}</view>
                        <view class="note" @tap="showDialog">添加备注</view>
                    </view>
                    <view class="from">
                        <view class="from-text">来自买智超的分享</view>
                    </view>
                </view>
                <view class="actions">
                    <view class="action">
                        <view class="num">{{visitInfo.visit > 9999 ? '9999+' : visitInfo.visit}}</view>
                        <view class="title">访问次数</view>
                    </view>
                    <view class="action">
                        <view class="num">{{visitInfo.share > 9999 ? '9999+' : visitInfo.share }}</view>
                        <view class="title">转发次数</view>
                    </view>
                    <view class="action">
                        <view class="num">{{visitInfo.vote === '0' ? visitInfo.vote : '+' + visitInfo.vote }}</view>
                        <view class="title">点赞</view>
                    </view>
                </view>
        </view>
        <view class="visitor-action">
            <view class="has-mobile" wx:if="{{visitInfo.mobile}}" @tap="bindPhoneCall" data-mobile="{{visitInfo.mobile}}">拨打电话</view>
            <view class="call" wx:else>拨打电话</view>
            <navigator url="../../packageChat/wechat/chat?contact={{visitInfo.chatToken}}&nickName={{visitInfo.nickName}}" class="send-msg" open-type="navigate" hover-class="none" @tap="sendMsg">发送信息</navigator>
        </view>
        <view class="visitor-log" wx:if="{{visitInfo.actions.length > 0}}">当前访客的行为记录</view>
        <view class="visitor-list" wx:if="{{visitInfo.actions.length > 0}}">
            <view class="item" wx:for="{{visitInfo.actions}}" wx:key="index">
                <text class="time">{{item.createTime}}</text>
                <text class="action">{{item.action}}</text>
            </view>
        </view>
        <view class="mask" wx:if="{{showPop}}">
            <view class="pop">
                <view class="pop-title">编辑备注</view>
                <view class="pop-body">
                    <input placeholder="请输入备注信息" cursor-spacing="80" @input="input" value="{{content}}"></input>
                </view>
                <view class="pop-options">
                    <view class="pop-btn" @tap="close">取消</view>
                    <view class="pop-btn enter" @tap="add">确定</view>
                </view>
            </view>
        </view>
    </scroll-view>
</template>

<script>
import wepy from 'wepy';
import { get } from '../../utils/ajax';
import { toast } from '../../utils';
import { makeTelCall } from '../../utils/service';
import { CONSUMER_INFO } from '../../utils/url';
import { globalData } from '../../utils/globalData';
import { SendClickLog } from '../../utils/maidian';
import Mixin from '../../mixin';

export default class visitorInfo extends wepy.page {
    mixins = [Mixin]
    config = {
        navigationBarTitleText: '访客信息',
    }
    data = {
        cardId: '',
        consumerId: '',
        showPop: false,
        content: '',
        sendParams: {
            pageNum: 1,
            pageSize: 10,
        },
        visitInfo: {
            actions: [],
            chatToken: '',
            mobile: '',
            nickName: '',
            otherInfo: '',
            portrait: '',
            share: 0,
            visit: 0,
            vote: 0,
        },
    }
    methods = {
        bindPhoneCall (e) {
            SendClickLog('sjzh_click_visitorInfo_call');
            makeTelCall(e);
        },
        sendMsg() {
            SendClickLog('sjzh_click_visitorInfo_sendMsg');
        },
        showDialog() {
            this.showPop = true;
            this.$apply();
        },
        input(e) {
            this.content = e.detail.value;
            this.$apply();
        },
        close() {
            this.showPop = false;
            this.$apply();
        },
        async add() {
            const content = this.content.trim();
            if (!content) {
                toast('请填写分组名称');
                return;
            }
            if (content.length > 15) {
                toast('分组名称过长');
                return;
            }
            this.$emit('addGroup', content);
            this.content = '';
            this.$apply();
        },
    }
    onLoad (option) {
        const { cardId, consumerId } = option;
        this.cardId = cardId;
        this.consumerId = consumerId;
        this.$apply();
    }
    onShow () {
        this.loadInfo();
        console.log('onshow');
    }
    loadMore() {
        this.sendParams.pageNum = this.sendParams.pageNum + 1;
        this.sendParams = Object.assign({}, this.sendParams, this.sendParams.pageNum);
        this.loadInfo();
    }
    async loadInfo() {
        try {
            const { token } = globalData.chat;
            this.sendParams = Object.assign(this.sendParams, { cardId: this.cardId, consumerId: this.consumerId, token });
            const { data } = await get(CONSUMER_INFO, this.sendParams);
            const {
                actions, chatToken, mobile, nickName, otherInfo, portrait, share, visit, vote,
            } = data;
            this.visitInfo.chatToken = chatToken;
            this.visitInfo.mobile = mobile;
            this.visitInfo.nickName = nickName;
            this.visitInfo.otherInfo = otherInfo;
            this.visitInfo.portrait = portrait;
            this.visitInfo.share = share;
            this.visitInfo.visit = visit;
            this.visitInfo.vote = vote;
            this.$apply();
            if (actions.length === 0) {
                this.visitInfo.actions = this.visitInfo.actions;
                toast('没有更多行为记录啦');
                return;
            }
            this.visitInfo.actions = this.visitInfo.actions.concat(actions);
            this.$apply();
        } catch (e) {
            toast(e);
            console.log(e);
        }
    }
}
</script>

