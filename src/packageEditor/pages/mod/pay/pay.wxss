.mod-pay{
    font-family: PingFangSC-Regular;
    height:100rpx;
    padding:0 30rpx 0;
}
.pay-icon,.pay-text,.pay-button{
    display:inline-block;
    vertical-align: middle;
}
.pay-icon{
    width:58rpx;
    height: 58rpx;
    background:url('data:image/png;base64,') no-repeat top left;
    background-size:100%;
}
.pay-text{
    margin-left:20rpx;
    font-size: 34rpx;
    color: #333333;
    line-height: 100rpx;
}
.pay-button{
    float:right;
    margin-top:20rpx;
    width:120rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #FF552E;
    border-radius: 6rpx;
    text-align: center;
    font-size: 32rpx;
    color: #FFFFFF;
}