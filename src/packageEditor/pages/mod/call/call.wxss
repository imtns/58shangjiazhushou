/* 悬浮电话 */
.mod-call{
    position:fixed !important;
    right:30rpx;
    bottom:74rpx;
    z-index: 100;
    width:114rpx;
    padding:0;
    background:transparent;
}
.menu-list{
    position: relative;
    margin:0 auto;
}

.menu-list-item{
    margin-bottom:24rpx;
    transition:all .2s cubic-bezier(0.48, 0.43, 0.29, 1.3);
    position:absolute;
    left:9rpx;
}
.last-list-item{
    margin-bottom:0;
    position: static;
}
.menu-list-item-hide1{
    transition-delay: .1s;
    transform: scale(.5);
    opacity: 0;
    bottom:0;
}
.menu-list-item-show1{
    transition-delay: .3s;
    opacity: 1;
    transform: scale(1);
    bottom:406rpx;
}
.menu-list-item-hide2{
    transition-delay: .2s;
    transform: scale(.5);
    opacity: 0;
    bottom:0;
}
.menu-list-item-show2{
    transition-delay: .2s;
    opacity: 1;
    transform: scale(1);
    bottom:250rpx;
}
.menu-list-item-hide3{
    transition-delay: .3s;
    opacity: 0;
    transform: scale(.5);
    bottom:0;
}
.menu-list-item-show3{
    transition-delay: .1s;
    opacity: 1;
    transform: scale(1);
    bottom:96rpx;
}
.call-button{
    width:96rpx;
    height:96rpx;
    border-radius: 100%;
    margin:0 auto 0;
    padding:0;
    box-shadow:0 0 12rpx 0 rgba(51,51,51,.14);
    background:url('https://img.58cdn.com.cn/lbg/jianzhan/sprites/call_sprites.png') no-repeat 0 0;
    background-size:116rpx 464rpx;
}
.call-text{
    display:block;
    text-align: center;
    font-size: 22rpx;
    color: #FFFFFF;
    margin-top:10rpx;
}
/* 按钮图标 */
.call-icon-open{
    background-position:-10rpx -126rpx;
    background-size:116rpx 464rpx;
    transition:all .3s cubic-bezier(0.48, 0.43, 0.29, 1.3);
}
.call-icon-back{
    transform: rotate(180deg);
}

.call-icon-tel{
    background-position:-10rpx -10rpx;
}
.call-icon-share{
    background-position:-10rpx -242rpx;
}
.call-icon-app{
    background-position:-10rpx -358rpx;
}

/* 蒙层 */
.mod-call-mask{
    position: absolute;
    z-index: 99;
    background:rgba(0,0,0,0);
    transition:all .6s ease-in-out;
}
.call-transit-show{
    top:0;
    bottom:0;
    right:0;
    left:0;
    background:rgba(0,0,0,.5);
}