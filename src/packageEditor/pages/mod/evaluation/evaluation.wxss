.mod-evaluation{
    padding-bottom: 16rpx;
}

.mod-evaluation-li{
    display: flex;
    margin: 0 0 20rpx;
}

.mod-evaluation-avatar{
    width: 72rpx;
    height: 72rpx;
    overflow: hidden;
    border-radius: 100%;
}

.mod-evaluation-avatar-img{
    width: 100%;
    height: 100%;
}

.mod-evaluation-content{
    flex: 1;
    margin: 0 0 0 20rpx;
}

.mod-evaluation-name{
    color: #333;
    font-size: 26rpx;
    height: 37rpx;
    line-height: 37rpx;
    font-weight: bold;
}

.mod-evaluation-desc{
    color: #333;
    font-size: 26rpx;
    line-height: 37rpx;
    margin: 12rpx 0;
}

.mod-evaluation-img{
    width: 165rpx;
    height: 165rpx;
    margin: 12rpx 26rpx 0 0;
}