<script>
import wepy from 'wepy';
import Mixin from './mixin';
import { toast } from '../../../utils';
import { globalData } from '../../../utils/globalData';

const { get } = require('../../../utils/ajax');

export default class goods extends wepy.page {
  config = {
      navigationBarTitleText: '商品管理',
      disableScroll: true,
  };
  mixins = [Mixin];
  data = {
      list: {},
      showGroup: false,
      group: {},
      goodsGroupName: '',
      goodsGroupId: '',
      params: {
          goodsGroupId: '0',
          goodsPage: '1',
          goodsSize: '4',
          goodsIds: '0',
      },
  };
  methods = {
      addgoods() {
          wepy.navigateTo({
              url: `/pages/goodsComponentAdd?id=${this.pageId}`,
          });
      },
      showGroup() {
          this.showGroup = !this.showGroup;
      },
      async selectGroup(e) {
          const { id, name } = e.currentTarget.dataset;
          this.goodsGroupName = name;
          this.params.goodsGroupId = id;
          await this.loadgoodsList(true);
          this.showGroup = false;
          this.$apply();
      },
      selectAll(e) {
          console.log(e);
          this.list.forEach(item => {
              item.checked = e.detail.value.length !== 0;
          });
          this.list.forEach((item) => {
              if (item.checked) {
                  this.appendData(item, true);
              } else {
                  this.appendData(item, false);
              }
          });
      },
      async checkboxBoxChange(e) {
          this.list.map(item => {
              if (e.detail.value.indexOf(item.id) === -1) {
                  item.checked = false;
              } else {
                  item.checked = true;
              }
              return item;
          });
          this.list.forEach((item) => {
              if (item.checked) {
                  this.appendData(item, true);
              } else {
                  this.appendData(item, false);
              }
          });
          this.$apply();
      },
      bindNameInput(e) {
          this.pageModule.cfg.title = e.detail.value;
      },
      save() {
          if (this.pageData[0].props.data.length === 0) {
              toast('至少选择一个商品');
              return;
          }
          console.log(JSON.stringify(this.params));
          this.pageModule.params = this.params;
          const selectGoods = this.list.filter(obj => obj.checked === true);
          this.params.goodsIds = selectGoods.map(good => good.id).join(',');
          globalData.pageData[this.pageIndex].props = this.pageData[0].props;
          globalData.modules[this.pageIndex] = this.pageModule;
          toast('已保存');
          setTimeout(() => {
              wx.navigateBack({
                  delta: 1,
              });
          }, 1000);
      },
  };
  appendData(item, isPush) {
      const filter = this.pageData[0].props.data.find(obj => obj.id === item.id);
      if ((filter && isPush) || (!filter && !isPush)) return;
      if (!isPush) {
          const index = this.pageData[0].props.data.findIndex(obj => obj.id === item.id);
          this.pageData[0].props.data.splice(index, 1);
      } else {
          this.pageData[0].props.data.push({
              id: item.id,
              img: item.pics.indexOf('?') > -1 ? item.pics.substr(0, item.pics.indexOf('?')) : item.pics,
              price: item.price,
              stock: 0,
              oldPrice: '',
              title: item.title,
              unit: '',
              unitName: '',
              priority: false,
          });
      }
  }
  async onLoad() {
      [this.pageModule] = this.tempModules.filter(obj => obj.id === this.pageId);
      this.pageModule.cfg.title = '';
      delete this.pageModule.data;
      console.log(this.pageModule);
      this.params.goodsGroupId = this.pageModule.params.goodsGroupId;
      await this.loadgoodsGroup();
      if (this.goodsGroupName) {
          this.loadgoodsList();
      }
  }
  async loadgoodsList(fromGroup) {
      const { data } = await get('/goods/list', {
          mpId: wx.getStorageSync('current_mpid'), groupId: this.params.goodsGroupId, pageNum: 1, pageSize: 1000,
      });
      console.log(data);
      this.list = data.data;
      if (fromGroup) {
          this.pageData[0].props.data = [];
          this.list.forEach((item) => {
              item.checked = true;
              this.appendData(item, true);
          });
      } else {
          this.list.forEach(item => {
              this.pageData[0].props.data.forEach(item1 => {
                  if (item.id === item1.id) {
                      item.checked = true;
                  }
              });
          });
      }
      this.$apply();
  }
  async loadgoodsGroup() {
      const { data } = await get('/goods/groups/specail', {
          mpId: wx.getStorageSync('current_mpid'),
      });
      this.group = data;
      if (this.pageData[0].params && Object.keys(JSON.parse(this.pageData[0].params)).length !== 0) {
          this.goodsGroupName = this.group.find(obj => obj.data.id === JSON.parse(this.pageData[0].params).goodsGroupId).data.name;
          this.params.goodsGroupId = this.group.find(obj => obj.data.id === JSON.parse(this.pageData[0].params).goodsGroupId).data.id;
      }
      this.$apply();
  }
}
</script>
