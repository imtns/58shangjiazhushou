<template>
    <view class="card-container">
        <view class="title">{{pageData[0].props.cfg.title}}</view>
        <scroll-view class="list" style="height:400rpx;" scroll-y scroll-with-animation @scroll="" >
            <repeat for="{{pageData[0].props.data}}" index="index" item="item">
                <view class="item" style="{{!item.checked?'display:none;':''}}">
                    <view class="thumb">
                        <image mode="aspectFill"  src="https://pic8.58cdn.com.cn{{item.picImg}}"></image>
                    </view>
                    <view class="cardDesc">
                        <view class="name">{{item.realName}}</view>
                        <view class="tag">{{item.level=='0'?'店长':'店员'}}</view>
                        <view class="desc">{{item.position}}</view>
                    </view>
                    <image class="arrow" src="https://static.58.com/lbg/shangjiaxcxht/zhushou/img/arrow-right.png?w=25" mode="scaleToFill" lazy-load="false">
                    </image>
                </view>
            </repeat>
        </scroll-view>
    </view>
    <view class="card-editLayer">
        <view class="saveBar">
            <text class="save" @tap="save">保存</text>
        </view>
        <view class="edit-cell">
            <view class="edit-label">标题名称</view>
            <view class="edit-input">
                <input data-name="name" value="{{pageData[0].props.cfg.title}}" maxlength="16" class="weui-input" name="name" bindinput="bindTitleInput" placeholder="16字以内" />
            </view>
        </view>
        <scroll-view scroll-y class="card-scroll">
            <checkbox-group bindchange="checkboxBoxChange">
                <repeat for="{{pageData[0].props.data}}" index="index" item="item">
                    <label class="card-checkbox">
                        <checkbox class="checkSqure" value="{{item.id}}" checked="{{item.checked}}" />
                        <view class="check-block">
                            <view class="thumb">
                                <image mode="aspectFill" src="https://pic8.58cdn.com.cn{{item.picImg}}"></image>
                            </view>
                            <view class="cardDesc">
                                <view class="name">{{item.realName}}</view>
                                <view class="tag">{{item.level=='0'?'店长':'店员'}}</view>
                                <view class="desc">{{item.position}}</view>
                            </view>
                        </view>
                    </label>
                </repeat>
            </checkbox-group>
        </scroll-view>
    </view>
</template>
<script>
import wepy from 'wepy';
import Mixin from './mixin';
import { toast } from '../../../utils';
import { globalData } from '../../../utils/globalData';
import { SendClickLog } from '../../../utils/maidian';

export default class Card extends wepy.page {
  config = {
      navigationBarTitleText: '名片',
      disableScroll: true,
  };
  mixins = [Mixin];
  data = {
  };
  onLoad() {
      [this.pageModule] = this.tempModules.filter(obj => obj.id === this.pageId);
  }
  onShow() {

  }
  methods = {
      checkboxBoxChange(e) {
          this.pageData[0].props.data.map(item => {
              if (e.detail.value.indexOf(item.id) === -1) {
                  item.checked = false;
              } else {
                  item.checked = true;
              }
              return item;
          });
      },
      bindTitleInput(e) {
          this.pageData[0].props.cfg.title = e.detail.value;
      },
      save() {
          SendClickLog('sjzh_click_editEard_save_btn');
          if (!this.pageData[0].props.cfg.title.trim()) {
              toast('请输入标题');
              return;
          }
          this.pageModule.cfg = this.pageData[0].props.cfg;
          const selectedIds = [];
          const selectedItem = [];
          this.pageData[0].props.data.map(item => {
              if (item.checked) {
                  selectedIds.push(item.id);
                  selectedItem.push(item);
              }
              return item;
          });
          this.pageModule.cfg.selectCards = selectedItem;
          this.pageModule.params.selectCardIds = selectedIds;
          [globalData.pageData[this.pageIndex]] = this.pageData;
          globalData.modules[this.pageIndex] = this.pageModule;
          toast('已保存');
          setTimeout(() => {
              wx.navigateBack({
                  delta: 1,
              });
          }, 1000);
      },
  }
}
</script>
