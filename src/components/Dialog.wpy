<template>
    <view class="mask" wx:if="{{showPop}}" catchtouchmove="stopPro">
        <view class="pop">
            <view class="pop-title">
                新建分组
            </view>
            <view class="pop-body">
                <input placeholder="请输入分组名称" cursor-spacing="80" @input="input"></input>
            </view>
            <view class="pop-options">
                <view class="pop-btn" @tap="close">取消</view>
                <view class="pop-btn enter" @tap="add">创建</view>
            </view>
        </view>
    </view>
</template>

<script>
import wepy from 'wepy';

import { toast } from '../utils';

export default class Pop extends wepy.component {
    props = {
        showPop: {
            type: Boolean,
        },
    }
    data = {
        showPop: false,
        content: '',
    }
    methods = {
        close() {
            this.$emit('close');
        },
        async add() {
            console.log(this.content);
            const content = this.content.trim();
            if (!this.content) {
                toast('请填写分组名称');
                return;
            }
            if (content.length > 15) {
                toast('分组名称过长');
                return;
            }
            this.$emit('addGroup', this.content);
            this.content = '';
        },
        input(e) {
            this.content = e.detail.value;
        },
    }
    onLoad() {
        console.log('onLoad');
    }
}
</script>

