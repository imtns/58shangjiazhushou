.mod-view{
  font-size:0;
}
.mod-head-images{
  box-sizing: border-box;
  text-align: center;
  color:#666;
  font-size:32rpx;
  margin-bottom:30rpx;
}

.mod-list-images{
  width:690rpx;
  overflow: hidden;
}
/* 一列布局 */
.mod-li-box-1{
  text-align: center;
  margin-bottom:30rpx;
}
.mod-li-image-1,.mod-li-text-1{
  display:block;
}
.mod-li-image-1{
  width:100%;
  height:510rpx;
}
.mod-li-text-1{
  margin-top:30rpx;
  font-size:28rpx;
  line-height: 40rpx;
  overflow: hidden;
  color:#333;
}
/* 两列布局 */
.mod-li-box-2{
  width:336rpx;
  margin-right:18rpx;
  margin-bottom:20rpx;
  display:inline-block;
  text-align: center;
  vertical-align: top;
}
.mod-li-image-2{
  width:100%;
  height:252rpx;
}
.mod-li-text-2{
  display:block;
  margin-top:20rpx;
  font-size:28rpx;
  line-height: 40rpx;
  color:#333;
  overflow: hidden;
}
/* 三列布局 */
.mod-li-box-3{
  width:220rpx;
  margin-bottom:30rpx;
  margin-right:14rpx;
  display:inline-block;
  text-align: center;
  vertical-align: top;
}

.mod-li-image-3{
  width:100%;
  height:164rpx;
}
.mod-li-text-3{
  display:block;
  margin-top:20rpx;
  font-size:28rpx;
  line-height:40rpx;
  overflow:hidden;
  color:#333;
}
