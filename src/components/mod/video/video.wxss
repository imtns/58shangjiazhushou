.mod-video{
    padding-bottom: 25rpx;
}
.mod-video-content{
    width: 690rpx;
    height: 390rpx;
    background-color: #000;
    position: relative;
}
.mod-video-tag{
    width: 100%;
    height: 100%;
}
.mod-video-arrow{
    position: absolute;
    top:50%;
    left:50%;
    display: block;
    width: 76rpx;
    height: 76rpx;
    border-radius: 100%;
    overflow: hidden;
    transform: translate(-50%,-50%);
    background: url('data:image/png;base64,') no-repeat;
    background-position: -2rpx -2rpx;
    background-size: 82rpx 82rpx;
}