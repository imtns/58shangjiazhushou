.coupons.row {
  display: flex;
  width: 200%;
}

.coupons .coupon-row-item {
  background-image: url("/coupon-small.png");
  background-size: 315rpx 180rpx;
  width: 315rpx;
  height: 180rpx;
  display: flex;
  color: #fff;
  margin-right: 40rpx;
}

.coupons .coupon-row-item .coupon-row-left {
  width: 250rpx;
  padding: 20rpx 0 20rpx 30rpx;
}

.coupons .coupon-row-item .coupon-row-left .value {
  font-size: 30rpx;
}

.coupons .coupon-row-item .coupon-row-left .value .bold {
  font-size: 50rpx;
}

.coupons .coupon-row-item .coupon-row-left .subtitle {
  font-size: 24rpx;
}

.coupons .coupon-row-item .coupon-row-left .valid-time {
  font-size: 24rpx;
  color: #FFE37F;
}

.coupons .coupon-row-item .coupon-row-right {
  width: 63rpx;
  font-size: 24rpx;
  padding: 24rpx 26rpx 24rpx 15rpx;
}

.coupons .coupon-item {
  width: 710rpx;
  height: 180rpx;
  margin: 20rpx 0 20rpx 0;
  display: flex;
  box-shadow: 0 1rpx 10rpx 0 rgba(0, 0, 0, 0.05);
  border-radius: 4rpx;
  position: relative;
  transition: margin .5s;
}

.coupons .coupon-item.editing {
  margin-left: 123rpx;
}

.coupons .coupon-item .coupon-left {
  width: 176rpx;
  color: #FF552E;
  font-size: 30rpx;
  background-color: #fff;
  line-height: 180rpx;
  padding: 0 20rpx;
  border-right: 2rpx dashed #FFB204;
  border-radius: 4rpx 0 0 4rpx;
  text-align: center;
}

.coupons .coupon-item .coupon-left .discount .bold {
  font-size: 70rpx;
}

.coupons .coupon-item .coupon-left .reduce .bold {
  font-size: 60rpx;
}

.coupons .coupon-item .coupon-right {
  flex-grow: 1;
  display: flex;
  background-image: linear-gradient(135deg, #FFBD05 0%, #FF9602 100%);
  padding: 30rpx 24rpx;
  align-items: center;
}

.coupons .coupon-item .coupon-right .info {
  flex-grow: 1;
  color: #FFF;
}

.coupons .coupon-item .coupon-right .info .title {
  font-size: 32rpx;
  line-height: 45rpx;
}

.coupons .coupon-item .coupon-right .info .type {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 13rpx;
}

.coupons .coupon-item .coupon-right .info .time {
  font-size: 24rpx;
  color: #ffe37f;
  line-height: 33rpx;
}

.coupons .coupon-item .coupon-right button {
  font-size: 28rpx;
  color: #FF9C02;
  background-color: #FFF;
  border-radius: 30rpx;
  width: 160rpx;
  height: 60rpx;
  padding: 0;
  line-height: 60rpx;
}

.coupons .coupon-item .checkbox {
  width: 40rpx;
  height: 40rpx;
  background-image: url("/resource-unchecked.png");
  background-size: 40rpx 40rpx;
  position: absolute;
  left: -83rpx;
  top: 70rpx;
}

.coupons .coupon-item .checkbox.checked {
  background-image: url("/resource-checked.png");
}

.coupons .coupon-item .mask {
  width: 100%;
  height: 100%;
  position: absolute;
}
