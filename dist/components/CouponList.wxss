@charset "UTF-8";
view {
  box-sizing: border-box;
}

.coupons .coupon-list-item {
  width: 710rpx;
  height: 180rpx;
  margin: 30rpx 20rpx 0 20rpx;
  display: flex;
  box-shadow: 0 1rpx 10rpx 0 rgba(0, 0, 0, 0.05);
  border-radius: 4rpx;
  position: relative;
  transition: margin .5s;
}

.coupons .coupon-list-item.editing {
  margin-left: 123rpx;
}

.coupons .coupon-list-item .coupon-list-left {
  width: 176rpx;
  color: #FF552E;
  font-size: 30rpx;
  background-color: #fff;
  line-height: 180rpx;
  padding: 0 20rpx;
  border-right: 2rpx dashed #FFB204;
  border-radius: 4rpx 0 0 4rpx;
  text-align: center;
}

.coupons .coupon-list-item .coupon-list-left .discount .bold {
  font-size: 70rpx;
}

.coupons .coupon-list-item .coupon-list-left .reduce .bold {
  font-size: 60rpx;
}

.coupons .coupon-list-item .coupon-list-middle {
  flex-grow: 1;
  display: flex;
  background-image: linear-gradient(135deg, #FFBD05 0%, #FF9602 100%);
  padding: 30rpx 24rpx;
  align-items: center;
}

.coupons .coupon-list-item .coupon-list-middle .info {
  flex-grow: 1;
  color: #FFF;
}

.coupons .coupon-list-item .coupon-list-middle .info .title {
  font-size: 32rpx;
  line-height: 45rpx;
}

.coupons .coupon-list-item .coupon-list-middle .info .type {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 13rpx;
}

.coupons .coupon-list-item .coupon-list-middle .info .time {
  font-size: 24rpx;
  color: #ffe37f;
  line-height: 33rpx;
}

.coupons .coupon-list-item .coupon-list-right {
  background-image: linear-gradient(90deg, #FFAD00 0%, #FF9602 66%);
  font-size: 24rpx;
  width: 120rpx;
  padding: 17rpx 20rpx 17rpx 28rpx;
  line-height: 33rpx;
  text-align: right;
  color: #FFE37F;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 0 4rpx 4rpx 0;
}

.coupons .coupon-list-item .coupon-list-right .count {
  margin-top: 2rpx;
  color: #FFF;
}

.coupons .coupon-list-item .checkbox {
  width: 40rpx;
  height: 40rpx;
  background-image: url("/resource-unchecked.png");
  background-size: 40rpx 40rpx;
  position: absolute;
  left: -83rpx;
  top: 70rpx;
}

.coupons .coupon-list-item .checkbox.checked {
  background-image: url("/resource-checked.png");
}

.coupons .coupon-list-item .mask {
  width: 100%;
  height: 100%;
  position: absolute;
}

