.mod-image-swiper{
    height: 252rpx;
    width: 750rpx;
    position: relative;
}

.mod-image-swiper-img{
    width: 100%;
    height: 100%;
}

.mod-image-info{
    width: 750rpx;
    color: #fff;
    padding: 16rpx 30rpx;
    background-image: linear-gradient(-180deg, rgba(0,0,0,0.0) 0%, rgba(0,0,0,0.4) 100%);
    position: absolute;
    bottom: 0;
}

.mod-image-title{
    font-size: 36rpx;
    line-height: 50rpx;
}
.mod-image-desc{
    font-size: 28rpx;
    line-height: 36rpx;
    word-break: break-all;
    word-wrap: break-word;
}

.mod-image-current{
    display:none;
    position: absolute;
    bottom: 26rpx;
    right: 26rpx;
    background-color: rgba(0, 0, 0, .6);
    padding: 6rpx 16rpx;
    border-radius: 6rpx;
    color: #fff;
    font-size: 28rpx;
}
