.banner-editLayer {
  width: 100%;
  box-sizing: border-box;
  height: 594rpx;
  position: fixed;
  bottom: 0;
  background: #5b5d5f;
  z-index: 10;
  padding: 0 30rpx;
}

.banner-editLayer .saveBar {
  height: 86rpx;
  box-sizing: border-box;
  margin: 0 -30rpx;
  padding-right: 30rpx;
  background: #46484a;
  color: white;
  line-height: 86rpx;
  font-size: 32rpx;
  text-align: right;
}

.banner-editLayer .scrollView {
  height: 186rpx;
  width: 110%;
  margin-right: -30rpx;
  margin-left: -30rpx;
  padding-left: 30rpx;
  white-space: nowrap;
  overflow: scroll;
  background: #545658;
  line-height: 186rpx;
}

.banner-editLayer .scrollView .scroll-view-item {
  position: relative;
  width: 200rpx;
  height: 114rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
  vertical-align: middle;
  display: inline-block;
  border: 1rpx solid #aaa;
}

.banner-editLayer .scrollView .scroll-view-item image {
  width: 100%;
  height: 100%;
}

.banner-editLayer .scrollView .scroll-view-item.active {
  border: 1rpx solid #4e88ff;
}

.banner-editLayer .scrollView .scroll-view-item.addButton {
  background: #aaa;
}

.banner-editLayer .scrollView .scroll-view-item.addButton image {
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}

.banner-editLayer .scrollView .scroll-view-item .span {
  width: 40rpx;
  height: 36rpx;
  background: #aaaaaa;
  color: white;
  text-align: center;
  font-size: 26rpx;
  line-height: 36rpx;
  white-space: nowrap;
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
}

.banner-editLayer .scrollView .scroll-view-item .span.active {
  background: #4e88ff;
}

.banner-editLayer .scrollView .scroll-view-item .del {
  display: none;
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 32rpx;
  height: 32rpx;
}

.banner-editLayer .scrollView .scroll-view-item .del.active {
  display: block;
}

.banner-editLayer .scrollView .scroll-view-item:last-child {
  margin-right: 50rpx;
}

.banner-editLayer .edit-cell {
  height: 88rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 30rpx;
  background: #545658;
  -webkit-columns: #333333;
          columns: #333333;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 0 -30rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #585d5f;
}

.banner-editLayer .edit-cell .edit-label {
  width: 324rpx;
  color: #999;
}

.banner-editLayer .edit-cell .edit-input {
  width: 396rpx;
  color: #d8d8d8;
  text-align: right;
}

.space {
  margin-top: 20rpx !important;
}

.banner-container {
  margin-top: 25rpx;
  width: 100%;
  background: white;
}

.banner-container .title {
  text-align: center;
  font-size: 34rpx;
  color: #333;
  padding: 30rpx 0 0;
}

.hasSaved {
  width: 256rpx;
  height: 100rpx;
  background: #333;
  color: white;
  font-size: 32rpx;
  margin: 37rpx auto 0;
  line-height: 100rpx;
  text-align: center;
  border-radius: 4rpx;
}

.banner-container .list {
  width: 100%;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  margin-top: 100rpx;
}

.banner-container .list .item {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 1;
          flex: 0 0 1;
  width: 100%;
  display: block;
  margin-bottom: 0;
  position: relative;
}

.banner-container .list .item image {
  width: 100%;
}
