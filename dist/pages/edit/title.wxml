
    <view class="title-container">
        <view class="title">
            {{pageData[0].props.cfg.title}}
        </view>
        <view class="desc">
            {{pageData[0].props.cfg.subtitle}}
        </view>
    </view>
    <view class="title-editLayer">
        <view class="saveBar" bindtap="save">保存</view>
        <view class="edit-cell">
            <view class="edit-label">标题名称</view>
            <view class="edit-input">
                <input data-name="name" bindinput="bindTitleInput" value="{{pageData[0].props.cfg.title}}" class="weui-input" name="name" placeholder="请输入名称"/>
            </view>
        </view>
        <view class="edit-special">
            <view class="edit-label">副标题</view>
            <view class="textarea">
                <textarea value="{{pageData[0].props.cfg.subtitle}}" bindinput="textareaInput" maxlength="200"/>
                <text class="textLimit">{{textLimit}}/200</text>
            </view>
        </view>
         <view class="edit-cell space">
            <view class="edit-label">连接名字</view>
            <view class="edit-input">
                <input data-name="name" bindinput="bindLinkInput" value="{{pageData[0].props.cfg.textName}}" maxlength="16" class="weui-input" name="name" auto-focus placeholder="16字以内"/>
            </view>
        </view>
         <view class="edit-cell">
            <view class="edit-label">跳转链接</view>
            <view class="edit-input">
                <picker range-key="name" bindchange="bindPickerChange" value="{{pageData[0].props.cfg.pageKey}}" range="{{pageList}}">
                    <view  wx:if="{{selectorIndex==-1 && !pageData[0].props.cfg.pageKey}}">请选择</view>
                    <view  wx:else class="picker">
                        {{pageData[0].props.cfg.linkName || pageList[selectorIndex].name}}
                    </view>
                </picker>
            </view>
        </view>
    </view>