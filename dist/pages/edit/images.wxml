
    <view class="mod-view mod-images {{pageData[0].props.cfg.showMore===false?'padding-bottom-30':''}}">
        <view class="mod-head mod-head-images"  wx:if="{{pageData[0].props.cfg.title && pageData[0].props.cfg.title.length>0}}">
            {{pageData[0].props.cfg.title}}
        </view>
        <view class="mod-list-images">
        <!-- 一左两右 -->
        <block  wx:if="{{pageData[0].props.cfg.styleName==='four'}}">
            <block wx:for="{{pageData[0].props.cfg.images}}" wx:for-index="idx" wx:for-item="item" wx:key="idx">
                <view wx:if="{{idx<pageData[0].props.cfg.maxNum}}" class="{{item.itemClass}}" data-index="{{idx}}" data-current="{{index}}" data-pagekey="{{item.pageKey}}" bindtap="onImageClick">
                    <image class="mod-li-image-four-{{item.itemIndex}}" mode="aspectFill" src="{{item.src}}"/>
                </view>
            </block>
        </block>
        <!-- 一左两右with标题 -->
        <block wx:elif="{{pageData[0].props.cfg.styleName==='fourplus'}}">
            <block wx:for="{{pageData[0].props.cfg.images}}" wx:for-index="idx" wx:for-item="item" wx:key="idx">
                <view wx:if="{{idx<pageData[0].props.cfg.maxNum}}" class="{{item.itemClass}}" data-index="{{idx}}" data-current="{{index}}" data-pagekey="{{item.pageKey}}" bindtap="onImageClick">
                    <image class="mod-li-image-fourplus-{{item.itemIndex}}" mode="aspectFill" src="{{item.src}}"/>
                    <text wx:if="{{item.title && item.title.length>0}}" class="mod-li-text-fourplus-{{item.itemIndex}}">{{item.title}}</text>
                </view>
            </block>
        </block>
        <!-- 一上两下 -->
        <block wx:elif="{{pageData[0].props.cfg.styleName==='five'}}">
            <block wx:for="{{pageData[0].props.cfg.images}}" wx:for-index="idx" wx:for-item="item" wx:key="idx">
                <view wx:if="{{idx<pageData[0].props.cfg.maxNum}}" class="{{item.itemClass}}" data-index="{{idx}}" data-current="{{index}}" data-pagekey="{{item.pageKey}}" bindtap="onImageClick">
                    <image class="mod-li-image-five-{{item.itemIndex}}" mode="aspectFill" src="{{item.src}}"/>
                    <text wx:if="{{item.title && item.title.length>0}}" class="mod-li-text-five-{{item.itemIndex}}">{{item.title}}</text>
                </view>
            </block>
        </block>
        <!-- 一上三下 -->
        <block wx:elif="{{pageData[0].props.cfg.styleName==='six'}}">
            <block wx:for="{{pageData[0].props.cfg.images}}" wx:for-index="idx" wx:for-item="item" wx:key="idx">
                <view wx:if="{{idx<pageData[0].props.cfg.maxNum}}" class="{{item.itemClass}}" data-index="{{idx}}" data-current="{{index}}" data-pagekey="{{item.pageKey}}" bindtap="onImageClick">
                    <image class="mod-li-image-six-{{item.itemIndex}}" mode="aspectFill" src="{{item.src}}"/>
                    <text wx:if="{{item.title && item.title.length>0}}" class="mod-li-text-six-{{item.itemIndex}}">{{item.title}}</text>
                </view>
            </block>
        </block>
        <!-- 其他样式 -->
        <block wx:else>
            <block wx:for="{{pageData[0].props.cfg.images}}" wx:for-index="idx" wx:for-item="item" wx:key="idx">
                <view wx:if="{{idx<pageData[0].props.cfg.maxNum}}" class="{{item.itemClass}}" data-index="{{idx}}" data-current="{{index}}" data-pagekey="{{item.pageKey}}" bindtap="onImageClick">
                    <image class="{{'mod-li-image-'+pageData[0].props.cfg.theme}}" mode="aspectFill" src="{{item.src}}"/>
                    <text wx:if="{{item.title && item.title.length>0}}" class="{{'mod-li-text-'+pageData[0].props.cfg.theme}}">{{item.title}}</text>
                </view>
            </block>
        </block>
        </view>
        <view class="mod-more mod-more-images" wx:if="{{pageData[0].props.cfg.showMore}}" data-index="{{index}}" bindtap="loadMore">查看更多</view>
    </view>
    <view class="shopPic-editLayer">
        <view class="saveBar" bindtap="save">保存</view>
        <view class="edit-cell">
            <view class="edit-label">标题名称</view>
            <view class="edit-input">
                <input data-name="name" class="weui-input" name="name" placeholder="请输入名称"/>
            </view>
        </view>
        <scroll-view scroll-x class="scrollView">
            <view class="addButton">

            </view>
            <view class="tobeAdded">
                <view class="scroll-view-item addButton" bindtap="addBanner">
                   <image src="../assets/plus.png"/>
                </view>
                <block wx:for="{{pageData[0].props.cfg.images}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                    <view class="scroll-view-item {{thumbActive == index?'active':''}}" data-index="{{index}}" bindtap="thumbClick">
                        <image src="{{item.src}}"/>
                        <view class="span active">{{index}}</view>
                        <image class="del {{thumbActive == index?'active':''}}" src="../assets/del.png" bindtap="del" data-index="{{index}}"/>
                    </view>
                </block>
            </view>
        </scroll-view>
        <view class="edit-cell space">
            <view class="edit-label">图片名称</view>
            <view class="edit-input">
                <input data-name="name" value="{{pageData[0].props.cfg.images[thumbActive].title}}" class="weui-input" name="name" bindinput="bindNameInput" auto-focus placeholder="请输入名称"/>
            </view>
        </view>
         <view class="edit-cell">
            <view class="edit-label">跳转链接</view>
            <view class="edit-input">
                <input data-name="name" value="{{pageData[0].props.cfg.images[thumbActive].linkName}}" class="weui-input" name="name" bindinput="bindLinkInput" auto-focus placeholder="请输入名称"/>
            </view>
        </view>
    </view>