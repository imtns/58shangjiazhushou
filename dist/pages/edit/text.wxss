.text-editLayer {
  width: 100%;
  box-sizing: border-box;
  height: 594rpx;
  position: fixed;
  bottom: 0;
  background: #5b5d5f;
  z-index: 10;
  padding: 0 30rpx;
}

.text-editLayer .radio {
  font-size: 28rpx;
}

.text-editLayer .radio radio .wx-radio-input {
  width: 24rpx;
  height: 24rpx;
  background: transparent;
  border: 1rpx solid #bdbdbd;
  border-radius: 50%;
}

.text-editLayer .radio radio .wx-radio-input.wx-radio-input-checked {
  background: #4e88ff !important;
}

.text-editLayer .radio radio .wx-radio-input.wx-radio-input-checked::before {
  font-size: 24rpx;
  color: #fff;
}

.text-editLayer .text-edit-content {
  height: 400rpx;
  overflow: scroll;
  width: 100vw;
  position: relative;
  left: 49%;
  right: 49%;
  margin-left: -50vw;
  margin-right: -50vw;
}

.text-editLayer .text-edit-content .edit-text-section {
  margin-top: 20rpx;
  font-size: 30rpx;
  position: relative;
  background: #545658;
  padding: 30rpx;
}

.text-editLayer .text-edit-content .edit-text-section .label {
  color: #999;
  padding: 20rpx 0;
}

.text-editLayer .text-edit-content .edit-text-section .text-content {
  width: 690rpx;
  height: 166rpx;
  color: #dbdbdb;
}

.text-editLayer .text-edit-content .edit-text-section .text-content textarea {
  height: 110rpx;
  width: 100%;
}

.text-editLayer .text-edit-content .edit-text-section .textLimit {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}

.text-editLayer .saveBar {
  height: 86rpx;
  box-sizing: border-box;
  margin: 0 -30rpx;
  padding-right: 30rpx;
  background: #46484a;
  color: white;
  line-height: 86rpx;
  font-size: 32rpx;
}

.text-editLayer .saveBar .label {
  width: 200rpx;
  margin-left: 30rpx;
  text-align: left;
}

.text-editLayer .saveBar .save {
  width: 100rpx;
  float: right;
  text-align: right;
}

.text-editLayer .edit-cell {
  height: 88rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 30rpx;
  background: #545658;
  -webkit-columns: #333333;
          columns: #333333;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 0 -30rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #585d5f;
}

.text-editLayer .edit-cell .edit-label {
  width: 224rpx;
  color: #999;
}

.text-editLayer .edit-cell .edit-input {
  width: 496rpx;
  color: #d8d8d8;
  text-align: right;
}

.space {
  margin-top: 20rpx !important;
}

.text-container {
  margin-top: 20rpx;
  background: white;
}

.text-container .list {
  width: 100%;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  background: wihte;
}

.text-container .list .desc {
  width: 100%;
  padding-right: 30rpx;
  height: 132rpx;
  font-size: 24rpx;
  background: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #aaa;
}

.text-container .list .desc .single {
  margin-left: 30rpx;
}

.text-container .list .desc image {
  margin-left: 30rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 60rpx;
          flex: 0 0 60rpx;
  width: 60rpx;
  height: 60rpx;
}

.text-container .list .desc .swiper {
  width: 590rpx;
  height: 80rpx;
  padding-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}
