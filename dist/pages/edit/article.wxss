.article-group {
  width: 296rpx;
  height: 363rpx;
  border-radius: 8rpx;
  background: white;
  z-index: 999;
  white-space: nowrap;
  overflow: scroll;
  position: absolute;
  left: 30rpx;
  bottom: 60rpx;
}

.article-group .group {
  width: 256rpx;
  margin: 0 auto;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}

.noArticle {
  width: 100%;
  height: 393rpx;
  text-align: center;
  line-height: 393rpx;
  color: #999;
  font-size: 30rpx;
}

.article-editLayer {
  width: 100%;
  box-sizing: border-box;
  height: 594rpx;
  position: fixed;
  bottom: 0;
  background: #5b5d5f;
  z-index: 10;
  padding: 0 30rpx;
}

.article-editLayer .saveBar {
  height: 86rpx;
  box-sizing: border-box;
  margin: 0 -30rpx;
  padding-right: 30rpx;
  background: #46484a;
  color: white;
  line-height: 86rpx;
  font-size: 32rpx;
}

.article-editLayer .saveBar .label {
  width: 200rpx;
  margin-left: 30rpx;
  text-align: left;
}

.article-editLayer .saveBar .save {
  width: 100rpx;
  float: right;
  text-align: right;
}

.article-editLayer .edit-cell {
  height: 88rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 30rpx;
  background: #545658;
  -webkit-columns: #333333;
          columns: #333333;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 0 -30rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #585d5f;
}

.article-editLayer .edit-cell .edit-label {
  width: 324rpx;
  color: #999;
}

.article-editLayer .edit-cell .edit-label .arrow {
  position: relative;
  top: -4rpx;
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 10rpx;
  border-style: solid;
  border-width: 10rpx 10rpx 0 10rpx;
  border-color: #ffffff transparent transparent transparent;
}

.article-editLayer .edit-cell .edit-input {
  width: 396rpx;
  color: #d8d8d8;
  text-align: right;
}

.article-editLayer .article-scroll {
  background: #545658;
  height: 328rpx;
  padding: 0 30rpx 30rpx;
  margin: 20rpx -30rpx 0;
}

.article-editLayer .article-scroll .article-checkbox {
  width: 640rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #dbdbdb;
  height: 82rpx;
  border-bottom: 1rpx solid #5b5d5f;
  font-size: 30rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

.article-editLayer .article-scroll .article-checkbox checkbox {
  margin-right: 10rpx;
}

.article-editLayer .article-scroll .article-checkbox checkbox .wx-checkbox-input {
  width: 24rpx;
  height: 24rpx;
  background: transparent;
  border: 1rpx solid #bdbdbd;
  border-radius: 50%;
}

.article-editLayer .article-scroll .article-checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #4e88ff;
}

.article-editLayer .article-scroll .article-checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  font-size: 24rpx;
  color: #fff;
}

checkbox .wx-checkbox-input {
  width: 20rpx;
  height: 20rpx;
}

.space {
  margin-top: 20rpx !important;
}

.article-container {
  background: white;
  margin-top: 20rpx;
}

.article-container .list {
  width: 100%;
  margin: 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 30rpx;
  background: wihte;
}

.article-container .list .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 0;
  padding: 30rpx 0;
  position: relative;
  border-bottom: 1rpx solid #f3f3f3;
}

.article-container .list .item .thumb {
  width: 192rpx;
  height: 144rpx;
}

.article-container .list .item .thumb image {
  width: 100%;
  overflow: hidden;
  height: 100%;
}

.article-container .list .item .articleDesc {
  width: 470rpx;
  margin-left: 26rpx;
}

.article-container .list .item .articleDesc .title {
  font-size: 28rpx;
  color: #353538;
}

.article-container .list .item .articleDesc .desc {
  width: 470rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 24rpx;
  color: #aaa;
  margin-top: 9rpx;
}
