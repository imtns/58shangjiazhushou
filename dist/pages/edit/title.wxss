.title-editLayer {
  width: 100%;
  box-sizing: border-box;
  height: 690rpx;
  position: fixed;
  bottom: 0;
  background: #5b5d5f;
  z-index: 10;
  padding: 0 30rpx;
}

.title-editLayer .saveBar {
  height: 86rpx;
  box-sizing: border-box;
  margin: 0 -30rpx;
  padding-right: 30rpx;
  background: #46484a;
  color: white;
  line-height: 86rpx;
  font-size: 32rpx;
  text-align: right;
}

.title-editLayer .scrollView {
  height: 186rpx;
  width: 110%;
  margin-right: -30rpx;
  margin-left: -30rpx;
  padding-left: 30rpx;
  white-space: nowrap;
  overflow: scroll;
  background: #545658;
  line-height: 186rpx;
}

.title-editLayer .scrollView .scroll-view-item {
  position: relative;
  width: 180rpx;
  height: 134rpx;
  margin-right: 20rpx;
  background: yellow;
  vertical-align: middle;
  display: inline-block;
}

.title-editLayer .scrollView .scroll-view-item .span {
  width: 40rpx;
  height: 36rpx;
  background: #aaaaaa;
  color: white;
  text-align: center;
  font-size: 26rpx;
  line-height: 36rpx;
  white-space: nowrap;
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
}

.title-editLayer .scrollView .scroll-view-item .span.active {
  background: #4e88ff;
}

.title-editLayer .scrollView .scroll-view-item:last-child {
  margin-right: 50rpx;
}

.title-editLayer .edit-special {
  display: block;
  margin: 0 -30rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  background: #545658;
  position: relative;
}

.title-editLayer .edit-special .edit-label {
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
}

.title-editLayer .edit-special .textarea {
  width: 100%;
  font-size: 30rpx;
  color: #dbdbdb;
  height: 212rpx;
}

.title-editLayer .edit-special .textarea textarea {
  height: 150rpx;
  width: 100%;
}

.title-editLayer .edit-special .textLimit {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}

.title-editLayer .edit-cell {
  height: 88rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 30rpx;
  background: #545658;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 0 -30rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #585d5f;
}

.title-editLayer .edit-cell .edit-label {
  width: 324rpx;
  color: #999;
}

.title-editLayer .edit-cell .edit-input {
  width: 396rpx;
  color: #d8d8d8;
  text-align: right;
}

.space {
  margin-top: 20rpx !important;
}

.title-container {
  margin-top: 96rpx;
  width: 100%;
  background: white;
}

.title-container .title {
  text-align: center;
  font-size: 34rpx;
  color: #333;
  padding: 30rpx 0 0;
}

.title-container .desc {
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}
