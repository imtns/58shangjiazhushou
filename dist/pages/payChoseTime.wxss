view {
  box-sizing: border-box;
}

.pay-header, .pay-body {
  width: 100%;
  height: 89rpx;
  line-height: 89rpx;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 20rpx 30rpx;
}

.pay-header {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #999999;
}

.pay-header view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 28rpx;
}

.pay-header .payrecord-type {
  text-align: center;
}

.pay-header .select-icon {
  color: #666;
  text-align: center;
}

.pay-header .selected.select-icon::before {
  background: url(https://static.58.com/lbg/shangjiaxcxht/zhushou/img/selected-icon.png) no-repeat;
  background-size: 40rpx 40rpx;
}

.pay-body {
  margin-top: 20rpx;
}

.pay-body .pay-base {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #999999;
}

.pay-body .right-angel {
  text-align: right;
  position: relative;
  padding-right: 30rpx;
}

.pay-body .right-angel::before {
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -13rpx;
  content: '';
  width: 15rpx;
  height: 26rpx;
  background: url("https://static.58.com/lbg/shangjiaxcxht/zhushou/img/arrow-right.png") no-repeat center;
  background-size: 100%;
}
