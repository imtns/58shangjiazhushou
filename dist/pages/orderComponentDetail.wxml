
    <view class="container">
        <view class="order-banner">
            <image src="http://pic1.58cdn.com.cn/{{pics}}"/>
        </view>
        <view class="item-flex">
            <view class="item-flex-line height-100">
                <view class="item-base">{{serviceName}}</view>
                <view class="item-base align-right"><image src="./assets/phone-icon.png"/></view>
            </view>
        </view>
        <view class="item-flex margin-top-20">
            <view class="item-flex-line">
                <view class="item-base">服务时长</view>
                <view class="item-base align-right">{{duration}} {{durationUnit === 1 ? '分钟' : '小时'}}</view>
            </view>
        </view>
        <view class="item-flex">
            <view class="item-flex-line">
                <view class="item-base">可预约时间段</view>
                <view class="item-base align-right">{{serviceStartTime - serviceEndTime}}</view>
            </view>
        </view>
        <view class="item-flex">
            <view class="item-flex-line">
                <view class="item-base">商家地址</view>
                <view class="item-base align-right right-angel padding-right-20">{{address}}</view>
            </view>
        </view>
        <!-- <view class="item-flex">
            <view class="item-flex-line">
                <view class="item-base">优惠劵</view>
                <view class="item-base align-right right-angel padding-right-20">有可使用的优惠劵</view>
            </view>
        </view> -->
        <view class="item-flex margin-top-20">
            <view class="item-flex-line"><view class="item-base">服务详情</view></view>
            <view class="item-flex-text">{{serviceDetailInfo}}</view>
        </view>
    </view>
    <view class="block"/>
    <view class="options">
        <view class="button edit" bindtap="manageProduct">{{status === 2 ? '上架' : '下架'}}</view>
        <view class="button" bindtap="edit">编辑</view>
    </view>