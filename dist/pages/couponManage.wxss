@import "./../components/CouponList.wxss";
view {
  box-sizing: border-box;
}

button::after {
  border: none;
}

.options {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 34rpx;
  letter-spacing: 0.51px;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-shadow: 0 -1rpx 17rpx -1rpx rgba(202, 202, 202, 0.5);
}

.options button {
  width: 50%;
  border-radius: 0;
  color: #FFF;
  background-color: #4e88ff;
}

.options button::after {
  border: none;
}

.options .edit {
  color: #4e88ff;
  background-color: #FFF;
}
