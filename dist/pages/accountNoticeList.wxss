page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

view, scroll-view {
  box-sizing: border-box;
}

.notice-container {
  width: 100%;
  height: 100%;
}

.notice-container .notice-header {
  width: 100%;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  background: #f5f5f5;
}

.notice-container .notice-header view {
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
}

.notice-container .notice-header .attach-notice {
  position: absolute;
  right: 30rpx;
  top: 0;
}

.notice-container .notice-list {
  width: 100%;
  margin-top: 80rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.notice-container .notice-list .notice-item {
  width: 100%;
  position: relative;
  padding: 24rpx 30rpx;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1rpx solid #f3f3f3;
  position: relative;
}

.notice-container .notice-list .notice-item .notice-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}

.notice-container .notice-list .notice-item .notice-content .business-name {
  font-size: 28rpx;
  color: #333;
}

.notice-container .notice-list .notice-item .notice-content .account-time {
  font-size: 28rpx;
  color: #999;
}

.notice-container .notice-list .notice-item .notice-money {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 48rpx;
  color: #333;
  text-align: right;
}

.notice-container .notice-list .notice-item .notice-money view {
  display: inline;
  font-size: 32rpx;
}

.notice-container .notice-list .notice-item .notice-unread {
  width: 16rpx;
  height: 16rpx;
  background: #FF3C39;
  border-radius: 100%;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.notice-container .emptyBox {
  width: 100%;
  text-align: center;
  padding-top: 280rpx;
}

.notice-container .emptyBox .emptyIcon {
  width: 209rpx;
  height: 187rpx;
}

.notice-container .emptyBox .emptyText {
  margin-top: 20rpx;
  color: #999999;
  font-size: 30rpx;
}
