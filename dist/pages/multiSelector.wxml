
    <view class="container">

        <scroll-view class="column {{boldColumn === colIndex ? 'selected' : ''}}"  wx:for="{{ contentList }}" scroll-y wx:key="index" wx:for-index="colIndex" wx:for-item="column" >

            <view class="content-box {{content.checked ? 'selected' : ''}}" wx:for="{{ column }}" wx:key="id" wx:for-index="conIndex" wx:for-item="content" wx:if="{{ column.length != 0 }}" bindtap="selectItem" data-wpyselectitem-a="{{ colIndex }}" data-wpyselectitem-b="{{ conIndex }}">
                <view class="content">{{ content[showProp] }}</view>
            </view>

        </scroll-view>
    </view>