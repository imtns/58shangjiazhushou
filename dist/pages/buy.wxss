view,
scroll-view {
  box-sizing: border-box;
}

page {
  width: 100%;
  height: 100%;
  background: #f6f6f6;
}

page .buy-container {
  font-family: PingFangSC-Medium;
  width: 100vw;
  height: 100vh;
  padding: 56rpx 0 0;
  background-image: linear-gradient(-205deg, #47b0ff 0%, #786dff 100%);
  background: url("https://img.58cdn.com.cn/lbg/shangjiaxcxht/zhushou/img/bg_buy.jpg") no-repeat;
  background-size: 100% 100%;
}

page .buy-container .buy-list {
  width: 100%;
  margin-right: -26rpx;
  white-space: nowrap;
}

page .buy-container .buy-list .buy-list-item-first {
  margin-left: 75rpx;
}

page .buy-container .buy-list .buy-list-item {
  display: inline-block;
  margin-right: 26rpx;
  width: 600rpx;
  position: relative;
}

page .buy-container .buy-list .buy-list-item .buy-app-title {
  margin-bottom: 52rpx;
  font-size: 38rpx;
  color: #ffffff;
  text-align: center;
  position: relative;
  z-index: 2;
}

page .buy-container .buy-list .buy-list-item .buy-app-title::before {
  display: inline-block;
  content: '';
  width: 17rpx;
  height: 17rpx;
  margin-right: 10rpx;
  transform: rotate(-315deg);
  background: #ffffff;
}

page .buy-container .buy-list .buy-list-item .buy-app-bg {
  display: block;
  width: 268rpx;
  height: 28rpx;
  background: rgba(112, 121, 255, 0.6);
  border-radius: 55rpx;
  position: absolute;
  left: 50%;
  top: 27rpx;
  transform: translateX(-50%);
  z-index: 1;
}

page .buy-container .buy-list .buy-list-item .buy-app-feature-list {
  height: 730rpx;
  padding: 46rpx 30rpx 0;
  background: #ffffff;
  border-radius: 25rpx;
  white-space: normal;
}

page .buy-container .buy-list .buy-list-item .buy-app-feature-list .buy-app-feature-list-item {
  display: inline-block;
  width: 270rpx;
  margin-bottom: 56rpx;
  vertical-align: top;
}

page .buy-container .buy-list .buy-list-item .buy-app-feature-list .buy-app-feature-list-item .app-feature-img {
  display: block;
  margin: 0 auto 10rpx;
  width: 70rpx;
  height: 70rpx;
  background: url("https://img.58cdn.com.cn/lbg/shangjiaxcxht/zhushou/img/appbuy_sprites.png") no-repeat -10rpx -910rpx;
  background-size: 90rpx 1080rpx;
  border-radius: 16rpx;
}

