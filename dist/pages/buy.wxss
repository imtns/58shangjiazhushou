page .buy-container .buy-list .buy-list-item .buy-app-feature-list .buy-app-feature-list-item .app-feature-desc {
  display: block;
  margin: 0 auto;
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666666;
  text-align: center;
}

page .buy-container .buy-list .buy-list-item .buy-app-pay {
  position: relative;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 360rpx;
  line-height: 88rpx;
  background-image: linear-gradient(-180deg, #ffd700 0%, #ff9b00 100%);
  box-shadow: 0 0 9rpx 0 rgba(116, 127, 152, 0.5), inset 0 -15rpx 20rpx 0 #fbb100;
  border-radius: 100rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
}
