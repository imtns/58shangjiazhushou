                    <view class="main-body-text" style="color:#333; font-size:30rpx;">{{item.title}}</view>
                </view>
            </view>
        </block>
        
        <view class="main-button {{form.enable?'':'main-button-disable'}}" bindtap="submitSave">完成</view>
