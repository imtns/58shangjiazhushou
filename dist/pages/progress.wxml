
    <view class="progress">
        <view class="title">当前小程序</view>
        <view class="mp">
            <view class="nameBox">
                <view class="name">{{business.current.nickName}}</view>
                <view class="type">
                    <image class="logo" mode="aspectFit" src="https://static.58.com/lbg/shangjiaxcxht/zhushou/img/youxiang.png"/>
                    <image class="logo" mode="aspectFit"  wx:if="business.current.app_type === 2" src="https://static.58.com/lbg/shangjiaxcxht/zhushou/img/weixin.png"/>
                </view>
            </view>
            <view class="date">有效期至 {{business.current.expiryDate}}</view>
        </view>
        <view class="progressDetail">
            <view class="box">
                <block wx:for="{{progress}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                    <view class="tips">
                        <view class="text">{{item.content}}</view>
                        <view class="icon {{item.status === 1 && item.nodeType !== 8 ? 'success' : 'notyet'}} {{item.status === -1 && item.nodeType === 8 ? 'notyet' : ''}} {{item.status === 1 && item.nodeType === 8 ? 'success' : ''}} {{item.status === 2 && item.nodeType === 8 ? 'fail' : ''}}"/>
                        <view class="time">{{item.successTime ? item.successTime : ''}}</view>
                        <view  wx:if="{{item.content !== '上线'}}" class="line {{item.status === 1 ? 'blue' : 'grey'}}"/>
                    </view>
                </block>
            </view>
        </view>
    </view>