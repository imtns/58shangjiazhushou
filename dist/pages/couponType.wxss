view {
  box-sizing: border-box;
}

.container {
  font-size: 30rpx;
}

.container .desc {
  color: #999;
  font-size: 26rpx;
  padding-top: 20rpx;
  padding: 20rpx 30rpx 0 30rpx;
}

.container .desc .text-line {
  margin-bottom: 20rpx;
}

.container .section {
  padding: 0 30rpx;
  background-color: #FFF;
  overflow: hidden;
}

.container .section .item {
  height: 89rpx;
  padding: 23rpx 0;
  display: flex;
  justify-content: space-between;
}

.container .section .item text {
  color: #999;
}

.container .section .item.border-bottom {
  border-bottom: 1rpx solid #f3f3f3;
}

.container .section .item.border-top {
  border-top: 1rpx solid #f3f3f3;
}

.container .section .item.select-type text {
  flex-grow: 2;
}

.container .section .item .radio-button {
  font-size: 28rpx;
  color: #666;
  display: flex;
}

.container .section .item .radio-button.first {
  margin-right: 100rpx;
}

.container .section .item .radio-button .icon-radio {
  width: 40rpx;
  height: 40rpx;
  margin-right: 14rpx;
  background-image: url("/resource-unchecked.png");
  background-size: 40rpx 40rpx;
}

.container .section .item .radio-button.checked .icon-radio {
  background-image: url("/resource-checked.png");
}

.container .section .item .placeholder {
  font-size: 28rpx;
  color: #BDBDBD;
}

.container .section .item input {
  text-align: right;
  width: 396rpx;
  height: 40rpx;
}
