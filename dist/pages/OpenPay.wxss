@charset "UTF-8";
.openpay-container {
  background: #f6f6f6;
  font-family: PingFangSC-Regular;
}

.openpay-container .openpay {
  /* 协议内容 */
}

.openpay-container .openpay .openpay-main {
  background: #fff;
  padding: 70rpx 0 80rpx;
}

.openpay-container .openpay .openpay-main .openpay-main-icon {
  display: block;
  width: 144rpx;
  height: 144rpx;
  margin: 0 auto 40rpx;
}

.openpay-container .openpay .openpay-main .openpay-main-content {
  line-height: 42rpx;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
}

.openpay-container .openpay .openpay-protocol {
  margin: 20rpx 30rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}

.openpay-container .openpay .openpay-protocol .openpay-protocol-agree,
.openpay-container .openpay .openpay-protocol .openpay-protocol-disagree {
  position: relative;
  padding-left: 34rpx;
  font-size: 26rpx;
  color: #9b9b9b;
}

.openpay-container .openpay .openpay-protocol .openpay-protocol-agree::before,
.openpay-container .openpay .openpay-protocol .openpay-protocol-disagree::before {
  display: inline-block;
  content: '';
  box-sizing: padding-box;
  position: absolute;
  top: -2rpx;
  left: -10rpx;
  width: 24rpx;
  height: 24rpx;
  border: 10rpx solid transparent;
  background: url("data:image/png;base64,") no-repeat top left;
  background-size: 100% 100%;
  background-clip: padding-box;
  -webkit-background-clip: padding-box;
}

.openpay-container .openpay .openpay-protocol .openpay-protocol-disagree::before {
  background: url("data:image/png;base64,") no-repeat top left;
  background-size: 100% 100%;
  background-clip: padding-box;
  -webkit-background-clip: padding-box;
}

.openpay-container .openpay .openpay-protocol .openpay-protocol-title1 {
  font-size: 26rpx;
  color: #6d7ea2;
}

.openpay-container .openpay .openpay-confirm {
  line-height: 94rpx;
  margin: 60rpx 30rpx 0;
  background: #4e88ff;
  border-radius: 4rpx;
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: 0;
  text-align: center;
}

.openpay-container .openpay .openpay-confirm.disable {
  opacity: 0.5;
}

.openpay-container .openpay .openpay-protocol-mask {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.5);
}

.openpay-container .openpay .openpay-protocol-container {
  box-sizing: border-box;
  width: 650rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  z-index: 100;
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx 60rpx;
}

.openpay-container .openpay .openpay-protocol-container .openpay-protocol-title {
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.openpay-container .openpay .openpay-protocol-container .openpay-protocol-title::after {
  position: relative;
  left: 180rpx;
  display: inline-block;
  font-family: 'iconfont';
  content: '\e69a';
  font-size: 36rpx;
}

.openpay-container .openpay .openpay-protocol-container .openpay-protocol-content {
  height: 800rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  word-break: break-all;
  overflow-y: scroll;
  overflow-x: hidden;
  letter-spacing: 1rpx;
  -webkit-overflow-scrolling: touch;
  color: #999;
  background: #f6f6f6;
}

.openpay-container .openpay .openpay-protocol-container .openpay-protocol-content-paragraph {
  text-indent: 2em;
}

.openpay-container .changepay .changepay-main {
  background: #fff;
  padding: 70rpx 0 80rpx;
}

.openpay-container .changepay .changepay-main .changepay-main-icon {
  display: block;
  width: 144rpx;
  height: 144rpx;
  margin: 0 auto 40rpx;
}

.openpay-container .changepay .changepay-main .changepay-main-content {
  line-height: 42rpx;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
}

.openpay-container .changepay .changepay-confirm,
.openpay-container .changepay .changepay-home {
  line-height: 94rpx;
  margin: 60rpx 30rpx 0;
  background: #4e88ff;
  border-radius: 4rpx;
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: 0;
  text-align: center;
}

.openpay-container .changepay .changepay-confirm {
  background: #4e88ff;
  color: #ffffff;
}

.openpay-container .changepay .changepay-home {
  margin-top: 20rpx;
  background: #ffffff;
  color: #333333;
}
