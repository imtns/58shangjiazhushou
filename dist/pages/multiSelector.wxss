.container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100%;
}

.column {
  background-color: #FBFBFB;
  width: 33%;
  color: #333;
  font-size: 28rpx;
  height: 100%;
  box-shadow: -5rpx 0rpx 30rpx 0rpx rgba(0, 0, 0, 0.05);
}

.column.selected {
  background-color: #FFF;
}

.column .content-box {
  padding: 0 30rpx;
}

.column .content-box.selected {
  color: #FFF;
  background-color: #3a87ff;
}

.column .content-box.selected .content {
  border: none;
}

.column .content-box .content {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}
