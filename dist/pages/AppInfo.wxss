.appinfo-container {
  width: 100vw;
  height: 100vh;
  padding-bottom: 30rpx;
}

.appinfo-container .appinfo-base {
  padding: 26rpx 30rpx;
  overflow: hidden;
  background: #fff;
  border-top: 2rpx solid #f3f3f3;
  border-bottom: 2rpx solid #f3f3f3;
}

.appinfo-container .appinfo-base .appinfo-logo {
  float: left;
  margin-right: 20rpx;
  width: 128rpx;
  height: 128rpx;
  border: 2rpx solid #e7e7e7;
}

.appinfo-container .appinfo-base .appinfo-title-wrap {
  display: inline-block;
  overflow: hidden;
  width: 450rpx;
  height: 128rpx;
}

.appinfo-container .appinfo-base .appinfo-title {
  max-width: 450rpx;
  line-height: 48rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #333333;
  letter-spacing: 0.51rpx;
}

.appinfo-container .appinfo-base .appinfo-date {
  margin-top: 18rpx;
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
}

.appinfo-container .appinfo-base .appinfo-youxiang,
.appinfo-container .appinfo-base .appinfo-weixin {
  display: inline-block;
  vertical-align: top;
  margin-left: 20rpx;
  width: 66rpx;
  line-height: 38rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  text-align: center;
  height: 38rpx;
  border-radius: 8rpx;
  letter-spacing: 0.57px;
  color: #f49b02;
  background: rgba(255, 157, 0, 0.1);
}

.appinfo-container .appinfo-base .appinfo-weixin {
  color: #27bc28;
  background: rgba(24, 173, 25, 0.1);
}

.appinfo-container .appinfo-status {
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.appinfo-container .appinfo-status .appinfo-auth,
.appinfo-container .appinfo-status .appinfo-verify,
.appinfo-container .appinfo-status .appinfo-telephone,
.appinfo-container .appinfo-status .appinfo-address {
  overflow: hidden;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 18rpx;
}

.appinfo-container .appinfo-status .appinfo-address {
  line-height: 40rpx;
  margin-bottom: 0;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
}

.appinfo-container .appinfo-qrcode-off {
  padding: 24rpx 30rpx;
  background: #fff;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
}

.appinfo-container .appinfo-qrcode {
  padding: 24rpx 30rpx 30rpx;
  background: #fff;
}

.appinfo-container .appinfo-qrcode .appinfo-qrcode-label {
  display: inline-block;
  margin-right: 20rpx;
  width: 140rpx;
  height: 40rpx;
  vertical-align: top;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
}

.appinfo-container .appinfo-qrcode .appinfo-qrcode-img {
  width: 180rpx;
  height: 180rpx;
}

.appinfo-container .appinfo-edit {
  margin: 60rpx auto 0;
  width: 690rpx;
  line-height: 94rpx;
  background: #4e88ff;
  border-radius: 4rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
}
