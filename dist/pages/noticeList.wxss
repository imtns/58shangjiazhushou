@import "./../components/Cropper.wxss";
page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

view, scroll-view {
  box-sizing: border-box;
}

.notice-container {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}

.notice-container .follow-public {
  width: 100%;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 28rpx;
  color: #fd867e;
  padding: 0 30rpx;
  background-color: #ffecec;
}

.notice-container .follow-public .follow-action {
  color: #fd867e;
  margin: 0;
  padding: 0;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  height: 50rpx;
  width: 150rpx;
  border: 1rpx solid #fd867e;
  border-radius: 5rpx;
}

.notice-container .notice-header {
  width: 100%;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  top: 80rpx;
  left: 0;
  z-index: 9;
  background: #f5f5f5;
}

.notice-container .notice-header view {
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
}

.notice-container .notice-header .attach-notice {
  position: absolute;
  right: 30rpx;
  top: 0;
}

.notice-container .notice-header .clear-notice::before {
  position: absolute;
  left: -40rpx;
  top: 22rpx;
  content: '';
  width: 36rpx;
  height: 36rpx;
  background: url(data:image/png;base64,);
  background-size: 36rpx 36rpx;
}

.notice-container .notice-new {
  width: 100%;
  position: fixed;
  top: 160rpx;
  left: 0;
  z-index: 9;
}

.notice-container .notice-new .notice-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  line-height: 88rpx;
  background: #fff;
  border-bottom: 1rpx solid #F3F3F3;
  box-sizing: border-box;
  position: relative;
}

.notice-container .notice-new .notice-name:after {
  content: '';
  display: block;
  width: 15rpx;
  height: 26rpx;
  background: url(https://static.58.com/lbg/shangjiaxcxht/zhushou/img/arrow-right.png) no-repeat;
  background-size: 100% 100%;
  position: absolute;
  top: 31rpx;
  right: 30rpx;
}

.notice-container .notice-new .num {
  font-size: 20rpx;
  color: #fff;
  width: 34rpx;
  line-height: 34rpx;
  text-align: center;
  background: #FF552E;
  border-radius: 100%;
  margin: 27rpx 5rpx 0 0;
  float: right;
  margin-right: 45rpx;
}

.notice-container .notice-list {
  width: 100%;
  margin-top: 335rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.notice-container .notice-list .notice-list-item {
  padding: 0 30rpx;
  background: #fff;
}

.notice-container .notice-list .notice-item {
  width: 100%;
  padding: 30rpx 0 30rpx 150rpx;
  border-bottom: 1rpx solid #f3f3f3;
  position: relative;
}

.notice-container .notice-list .notice-item .notice-img {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 0;
  top: 30rpx;
}

.notice-container .notice-list .notice-item .notice-img image {
  width: 100%;
  height: 100%;
}

.notice-container .notice-list .notice-item .notice-img.new-msg::after {
  width: 20rpx;
  height: 20rpx;
  background: red;
  border-radius: 50%;
  content: '';
  position: absolute;
  right: -9rpx;
  top: -8rpx;
}

.notice-container .notice-list .notice-item .notice-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.notice-container .notice-list .notice-item .notice-content .notice-detail {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin-right: 10rpx;
}

.notice-container .notice-list .notice-item .notice-content .notice-detail .notice-name {
  line-height: 45rpx;
  height: 45rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.notice-container .notice-list .notice-item .notice-content .notice-detail .notice-weixin-type {
  width: 62rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: rgba(32, 133, 255, 0.1);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #2085FF;
  letter-spacing: 0.52rpx;
  margin: 6rpx 8rpx 0 0;
}

.notice-container .notice-list .notice-item .notice-content .notice-detail .notice-weixin-type.youxiang {
  color: #FFA100;
  background: rgba(255, 161, 0, 0.1);
}

.notice-container .notice-list .notice-item .notice-content .notice-detail .notice-weixin-name, .notice-container .notice-list .notice-item .notice-content .notice-detail .notice-msg {
  height: 45rpx;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 0.48rpx;
  line-height: 45rpx;
  width: 278rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.notice-container .notice-list .notice-item .notice-content .notice-detail .notice-msg {
  height: 48rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: 0;
  margin-top: 42rpx;
  width: 350rpx;
}

.notice-container .notice-list .notice-item .notice-content .notice-state {
  width: 300rpx;
}

.notice-container .notice-list .notice-item .notice-content .notice-state .notice-status {
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  height: 45rpx;
  line-height: 45rpx;
  text-align: right;
}

.notice-container .notice-list .notice-item .notice-content .notice-state .notice-time {
  font-size: 24rpx;
  color: #CCCCCC;
  letter-spacing: 0;
  margin-top: 55rpx;
  text-align: right;
}

.notice-container .emptyBox {
  width: 100%;
  height: 50%;
  text-align: center;
  margin: auto;
}

.notice-container .emptyBox .emptyIcon {
  width: 209rpx;
  height: 187rpx;
}

.notice-container .emptyBox .emptyText {
  margin-top: 20rpx;
  color: #999999;
  font-size: 30rpx;
}
