
    <view class="container">
        <view class="section border-top">
            <view class="item select-type">
                <text>类型选择</text>
                <view class="radio-button first {{couponType === 1 ? 'checked' : ''}}"  bindtap="dataAction" data-wpydataaction-a="couponType" data-wpydataaction-b="1">
                    <view class="icon-radio"/>
                    代金券
                </view>
                <view class="radio-button {{couponType === 2 ? 'checked' : ''}}" bindtap="dataAction" data-wpydataaction-a="couponType" data-wpydataaction-b="2">
                    <view class="icon-radio"/>
                    折扣券
                </view>
            </view>
        </view>
        <view class="desc">
            <view class="text-line">代金券：可抵扣现金，展示为：满X元，减X元</view>
            <view class="text-line">折扣券：可享受折扣，展示为：满X元，享X折</view>
        </view>
        <view class="section">
            <view class="item border-bottom">
                <block  wx:if="{{ couponType === 2 }}">
                    <text>享受折扣</text>
                    <input type="digit" placeholder="请输入享受折扣" placeholder-class="placeholder" value="{{ formatCouponDiscard || '' }}" bindblur="dataAction" data-wpydataaction-a="couponDiscard"/>
                </block>
                <block  wx:else>
                    <text>减免金额</text>
                    <input type="digit" placeholder="请输入减免金额" placeholder-class="placeholder" value="{{ reliefAmount || '' }}" bindblur="dataAction" data-wpydataaction-a="reliefAmount"/>
                </block>
            </view>
            <view class="item">
                <text>消费需要满</text>
                <input type="digit" placeholder="请输入消费金额" placeholder-class="placeholder" value="{{ limitAmount || '' }}" bindblur="dataAction" data-wpydataaction-a="limitAmount"/>
            </view>
        </view>
    </view>