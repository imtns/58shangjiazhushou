.button {
  width: 100%;
  height: 102rpx;
  background: #4E88FF;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 102rpx;
}

.options {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 34rpx;
  letter-spacing: 0.51px;
  position: fixed;
  bottom: 1rpx;
  width: 100%;
}

.options .button {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  border-radius: 0;
  color: #FFF;
  background-color: #4e88ff;
  box-shadow: 0 -1px 17px -1px rgba(202, 202, 202, 0.5);
}

.options .button::after {
  content: none;
}

.options .edit {
  color: #4e88ff;
  background-color: #FFF;
}

.container {
  width: 100%;
  height: 100%;
  overflow-y: auto;
}

.container .order-banner {
  width: 100%;
  height: 562rpx;
}

.container .order-banner image {
  width: 100%;
  height: 100%;
}

.container .item-flex {
  background: #fff;
  padding: 0 30rpx;
}

.container .item-flex .item-flex-line {
  border-bottom: 1rpx solid #f6f6f6;
  height: 88rpx;
  line-height: 88rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.container .item-flex .item-flex-line.height-100 {
  height: 100rpx;
  line-height: 100rpx;
}

.container .item-flex .item-flex-line .item-base {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  position: relative;
}

.container .item-flex .item-flex-line .item-base.align-right {
  text-align: right;
}

.container .item-flex .item-flex-line .item-base image {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 0;
  top: 38rpx;
}

.container .item-flex .item-flex-line .item-base.right-angel::before {
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -13rpx;
  content: '';
  width: 15rpx;
  height: 26rpx;
  background: url("https://static.58.com/lbg/shangjiaxcxht/zhushou/img/arrow-right.png") no-repeat center;
  background-size: 15rpx 26rpx;
}

.container .item-flex .item-flex-line .item-base.padding-right-20 {
  padding-right: 20rpx;
}

.container .item-flex.margin-top-20 {
  margin-top: 20rpx;
}

.container .item-flex .item-flex-text {
  background: #fff;
  font-size: 28rpx;
  padding: 20rpx 10rpx;
  line-height: 40rpx;
  letter-spacing: 0.3rpx;
}

.block {
  width: 100%;
  height: 102rpx;
}
