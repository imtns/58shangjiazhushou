page {
  width: 100%;
  height: 100%;
  padding-bottom: 30rpx;
  background: #f6f6f6;
}

page .upload-title {
  font-size: 26rpx;
  color: #999999;
  padding: 20rpx 30rpx;
}

page .upload-body {
  background: #fff;
}

page .upload-body .upload-body-line.no-border-bottom {
  border: 0;
  flex-direction: column;
}

page .upload-body .upload-body-line {
  padding: 23rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
}

page .upload-body .upload-body-line .upload-left,
page .upload-body .upload-body-line .upload-right {
  font-size: 30rpx;
  color: #999999;
}

page .upload-body .upload-body-line .upload-right {
  color: #333;
}

page .upload-body .upload-body-line .upload-left {
  width: 200rpx;
}

page .upload-body .upload-body-line .upload-left.column {
  width: 100%;
  padding: 24rpx 0;
}

page .upload-body .upload-body-line .upload-right {
  flex: 1;
  text-align: right;
}

page .upload-body .upload-body-line .upload-textarea {
  line-height: 48rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  color: #333333;
  width: 100%;
}

page .upload-body .upload-body-line .upload-textarea-size {
  padding-top: 20rpx;
  font-size: 24rpx;
  color: #cccccc;
  text-align: right;
}

page .main-button {
  background: #ccc;
  border-radius: 4rpx;
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: 0;
  text-align: center;
  width: 690rpx;
  height: 94rpx;
  line-height: 94rpx;
  margin: 60rpx auto 0;
}

page .main-button-ok {
  background: #4e88ff;
}
