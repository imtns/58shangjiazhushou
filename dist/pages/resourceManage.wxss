@import "./../components/Dialog.wxss";
@import "./../components/EmptyPage.wxss";
.group-list {
  width: 100%;
  background: #fff;
}

.group-list .group-item {
  width: 100%;
  height: 124rpx;
  position: relative;
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.group-list .group-item .group-line {
  width: 100%;
  border-bottom: 1rpx solid #f6f6f6;
  flex: 1;
  display: flex;
}

.group-list .group-item .group-name, .group-list .group-item .group-size {
  line-height: 124rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  letter-spacing: 0.45rpx;
}

.group-list .group-item .group-name {
  max-width: 452rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 10rpx;
}

.group-list .group-item .group-size {
  flex: 1;
}

.group-list .group-item .group-angel {
  position: absolute;
  right: 30rpx;
  top: 47rpx;
}

.group-list .group-item .group-angel::before {
  position: absolute;
  right: 0;
  top: 0;
  content: '';
  width: 15rpx;
  height: 26rpx;
  background: url("https://static.58.com/lbg/shangjiaxcxht/zhushou/img/arrow-right.png") no-repeat center;
  background-size: 100%;
}

.group-list .group-item .rename-btn {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #4E88FF;
  letter-spacing: 0.45rpx;
  position: absolute;
  right: 30rpx;
  top: 41rpx;
  width: 92rpx;
  height: 42rpx;
  text-align: center;
  line-height: 42rpx;
}

.edit .group-line {
  padding-left: 50rpx;
}

.edit .group-line::before {
  width: 30rpx;
  height: 30rpx;
  content: '';
  position: absolute;
  left: 30rpx;
  top: 50%;
  margin-top: -15rpx;
  background: url(https://static.58.com/lbg/shangjiaxcxht/zhushou/img/unselectd-icon.png) no-repeat;
  background-size: 30rpx 30rpx;
}

.edit .selected.group-line::before {
  background: url(https://static.58.com/lbg/shangjiaxcxht/zhushou/img/selected-icon.png) no-repeat;
  background-size: 30rpx 30rpx;
}

.block {
  width: 100%;
  height: 102rpx;
}

.button {
  width: 100%;
  height: 102rpx;
  background: #4E88FF;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 102rpx;
}

.options {
  display: flex;
  font-size: 34rpx;
  letter-spacing: 0.51px;
  position: fixed;
  bottom: 1rpx;
  width: 100%;
}

.options .button {
  flex: 1;
  border-radius: 0;
  color: #FFF;
  background-color: #4e88ff;
  box-shadow: 0 -1px 17px -1px rgba(202, 202, 202, 0.5);
}

.options .button::after {
  content: none;
}

.options .edit {
  color: #4e88ff;
  background-color: #FFF;
}

.container {
  margin-top: 110rpx;
  width: 100%;
  height: 100%;
}

.tabs-wrap {
  display: table;
  width: 100%;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 100;
  border-top: 2rpx solid #f3f3f3;
  font-size: 30rpx;
}

.tabs-wrap > .tab-box {
  display: table-cell;
  text-align: center;
  line-height: 88rpx;
  color: #666666;
}

.tabs-wrap > .tab-box.selected {
  color: #4e88ff;
}

.tabs-wrap > .tab-box.selected::after {
  display: block;
  content: '';
  width: 60rpx;
  height: 6rpx;
  margin: 0 auto;
  background: #4e88ff;
  border-radius: 42rpx;
}

.work-list {
  background-color: #FFFFFF;
  padding: 45rpx 15rpx 102rpx 45rpx;
  min-height: 1098rpx;
}

.work-list .content {
  display: flex;
  flex-wrap: wrap;
}

.work-list .content .work-box {
  position: relative;
  margin: 0 30rpx 30rpx 0;
}

.work-list .content .work-box .work-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 200rpx;
  height: 200rpx;
}

.work-list .content .work-box .work-mask::after {
  content: ' ';
  display: block;
  background: url("/resource-unchecked.png");
  background-size: 39rpx 39rpx;
  width: 39rpx;
  height: 39rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.work-list .content .work-box .work-mask.checked::after {
  background-image: url("/resource-checked.png");
}

.work-list .content .item {
  width: 200rpx;
  height: 200rpx;
  background-color: #000000;
}

.work-list .content .item.video::after {
  content: ' ';
  display: block;
  background: url("/resource-video-play.png");
  background-size: 60rpx 60rpx;
  width: 60rpx;
  height: 60rpx;
  margin: auto;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
