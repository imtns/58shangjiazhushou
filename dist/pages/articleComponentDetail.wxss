.button {
  width: 100%;
  height: 102rpx;
  background: #4E88FF;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 102rpx;
}

.options {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 34rpx;
  letter-spacing: 0.51px;
  position: fixed;
  bottom: 1rpx;
  width: 100%;
}

.options .button {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  border-radius: 0;
  color: #FFF;
  background-color: #4e88ff;
  box-shadow: 0 -1px 17px -1px rgba(202, 202, 202, 0.5);
}

.options .button::after {
  content: none;
}

.options .edit {
  color: #4e88ff;
  background-color: #FFF;
}

page {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}

.container {
  background: #fff;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 32rpx 40rpx 0;
  box-sizing: border-box;
}

.container .article-title {
  max-width: 670rpx;
  height: 68rpx;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #000000;
  letter-spacing: 0.24rpx;
  line-height: 68rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.container .article-intro {
  width: 100%;
  border-bottom: 1rpx solid #f3f3f3;
}

.container .article-intro .article-detail-flex {
  display: inline-block;
  margin-right: 10rpx;
  line-height: 50rpx;
}

.container .article-intro .article-detail-flex .article-base, .container .article-intro .article-detail-flex .base-text {
  float: left;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  letter-spacing: 0;
}

.container .article-intro .article-detail-flex .article-base {
  color: #666666;
}

.container .article-intro .article-detail-flex .base-text {
  color: #3F3F3F;
}

.container .article-intro .article-detail-flex .base-over.base-text {
  max-width: 156rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.container .article-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
