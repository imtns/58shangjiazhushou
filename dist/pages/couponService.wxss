view {
  box-sizing: border-box;
}

.container .wrap {
  padding: 30rpx;
}

.container .top {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.container .top .current-group {
  color: #666;
}

.container .top .current-group .icon-triangle {
  display: inline-block;
  width: 14rpx;
  height: 10rpx;
  margin: 0 0 7rpx 10rpx;
  background-image: url("/coupon-triangle.png");
  background-size: 14rpx 10rpx;
  transform: rotate(180deg);
  transition: transform .3s;
}

.container .top .current-group .group-list {
  width: 296rpx;
  padding: 0 20rpx;
  margin-top: 10rpx;
  position: absolute;
  background-color: #fff;
  box-shadow: 2rpx 2rpx 10rpx 0 rgba(189, 189, 189, 0.5);
  border-radius: 8rpx;
  display: none;
}

.container .top .current-group .group-list .item {
  height: 80rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}

.container .top .current-group .group-list .item.last {
  border: none;
}

.container .top .current-group.show .icon-triangle {
  transform: rotate(0deg);
}

.container .top .current-group.show .group-list {
  display: block;
}

.container .top .add-product {
  color: #4e88ff;
}

.container .products {
  padding-left: 100rpx;
}

.container .products .item {
  display: flex;
  align-items: center;
  background-color: #fff;
  width: 590rpx;
  height: 163rpx;
  box-shadow: 2rpx 6rpx 6rpx 0 rgba(213, 219, 255, 0.3);
  border-radius: 8rpx;
  padding: 22rpx 0;
  margin-bottom: 20rpx;
}

.container .products .item .checkbox {
  width: 40rpx;
  height: 40rpx;
  background-image: url("/resource-unchecked.png");
  background-size: 40rpx 40rpx;
  margin-left: -100rpx;
}

.container .products .item .checkbox.checked {
  background-image: url("/resource-checked.png");
}

.container .products .item image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  margin-left: 40rpx;
  border-radius: 8rpx;
  background-color: #FFF;
  border: 1rpx solid #eee;
  box-shadow: 2rpx 6rpx 6rpx 0 rgba(213, 219, 255, 0.3);
}

.container .products .item .info .title {
  font-size: 32rpx;
  color: #333;
  line-height: 45rpx;
  margin-bottom: 10rpx;
}

.container .products .item .info .price {
  font-size: 30rpx;
  color: #666;
  line-height: 48rpx;
}

.container .products .item .info .price .bold {
  font-size: 34rpx;
  color: #ff937b;
  margin: 0 4rpx;
}

.options {
  display: flex;
  font-size: 34rpx;
  letter-spacing: 0.51rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-shadow: 0 -1rpx 17rpx -1rpx rgba(202, 202, 202, 0.5);
}

.options button {
  width: 50%;
  border-radius: 0;
  color: #FFF;
  background-color: #4e88ff;
}

.options button::after {
  border: none;
}

.options .edit {
  color: #4e88ff;
  background-color: #FFF;
}
