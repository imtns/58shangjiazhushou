view {
  box-sizing: border-box;
}

.container {
  font-size: 28rpx;
}

.section {
  margin-top: 20rpx;
  background-color: #FFFFFF;
  overflow: hidden;
}

.section .item {
  display: flex;
  justify-content: space-between;
  padding: 23rpx 0;
  margin: 0 30rpx;
  position: relative;
  height: 89rpx;
}

.section .item.border-bottom {
  border-bottom: 1rpx solid #f3f3f3;
}

.section .item.required::before {
  display: block;
  content: '*';
  width: 14rpx;
  height: 37rpx;
  font-size: 26rpx;
  color: #FFA100;
  position: absolute;
  left: -15rpx;
}

.section .item input {
  width: 396rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: right;
}

.section .item text {
  color: #BDBDBD;
  font-size: 30rpx;
}

button.save {
  height: 102rpx;
  background-color: #4e88ff;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 0;
}

button.save.disabled {
  background-color: #C5C5C5;
}

button.save::after {
  content: none;
}

.placeholder {
  font-size: 28rpx;
  color: #BDBDBD;
}

.icon {
  display: inline-block;
}

.icon.more {
  width: 25rpx;
  height: 25rpx;
  background: url("/coupon-more.png") no-repeat;
  background-size: auto 25rpx;
  background-position: right;
}
