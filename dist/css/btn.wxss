.button {
  width: 100%;
  height: 102rpx;
  background: #4E88FF;
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 102rpx;
}

.options {
  display: flex;
  font-size: 34rpx;
  letter-spacing: 0.51px;
  position: fixed;
  bottom: 1rpx;
  width: 100%;
}

.options .button {
  flex: 1;
  border-radius: 0;
  color: #FFF;
  background-color: #4e88ff;
  box-shadow: 0 -1px 17px -1px rgba(202, 202, 202, 0.5);
}

.options .button::after {
  content: none;
}

.options .edit {
  color: #4e88ff;
  background-color: #FFF;
}
